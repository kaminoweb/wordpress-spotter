#!/bin/bash

check_wp_header() {
    url=$1
    # Fetch headers only using curl
    headers=$(curl -I -s "$url")

    # Check for 'WordPress' in headers
    if echo "$headers" | grep -i 'X-Powered-By' | grep -qi 'WordPress'; then
        echo "The website is using WordPress (detected via HTTP header)."
    else
        echo "No WordPress-related HTTP headers found."
    fi
}

# Usage: pass the website URL as an argument
check_wp_header "https://example.com"

